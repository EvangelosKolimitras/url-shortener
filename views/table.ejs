<style>
  .refreshcContainer {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }
  .refreshcContainer svg {
    margin-bottom: 10px;
    transition: all 0.5s;
  }
  .refreshcContainer svg:hover {
    cursor: pointer;
    transform: scale(1.125);
  }
</style>
<table class="table table-hover table-striped">
  <div class="refreshcContainer">
    <svg
      onClick="location.reload();"
      width="1em"
      height="1em"
      viewBox="0 0 16 16"
      class="bi bi-arrow-counterclockwise"
      fill="currentColor"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        fill-rule="evenodd"
        d="M8 3a5 5 0 1 1-4.546 2.914.5.5 0 0 0-.908-.417A6 6 0 1 0 8 2v1z"
      />
      <path
        d="M8 4.466V.534a.25.25 0 0 0-.41-.192L5.23 2.308a.25.25 0 0 0 0 .384l2.36 1.966A.25.25 0 0 0 8 4.466z"
      />
    </svg>
  </div>
  <thead>
    <tr>
      <th scope="col">Original Url</th>
      <th scope="col">Shrinked Url</th>
      <th scope="col">No. Clicks</th>
    </tr>
  </thead>
  <tbody>
    <% urls.forEach( url => { %>
    <tr>
      <td><a href="<%= url.originalUrl %>"><%= url.originalUrl %></a></td>
      <td>
        <a href="<%= url.shortenedUrl %>"><%= url.shortenedUrl %></a>
      </td>
      <td><%= url.numberOfClicks %></td>
    </tr>
    <% }) %>
  </tbody>
</table>
